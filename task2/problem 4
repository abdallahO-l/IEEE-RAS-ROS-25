def reverse_sentence():
    sentence = input("Enter a sentence: ") 
    words = sentence.split()  
    reversed_words = []  

    i = len(words) - 1 
    while i >= 0: 
        reversed_words.append(words[i])  
        i = i - 1

    reversed_sentence = " ".join(reversed_words) 
    print("Reversed sentence:", reversed_sentence)

reverse_sentence()
