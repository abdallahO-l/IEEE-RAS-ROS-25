def factorial():
    num = int(input("Enter a positive number: "))  
    if num < 0:
        print("Factorial is not defined for negative numbers!")
        return
    
    result = 1 
    i = 1 

    while i <= num:
        result = result * i
        i = i + 1 

    print("Factorial of", num, "is", result)

factorial()

