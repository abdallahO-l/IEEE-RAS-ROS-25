def is_palindrome():
    word = input("Enter a word: ")
    i = 0
    j = len(word) - 1  # Last index
    is_palindrome = True 
    while i < j:
        if word[i] != word[j]: 
            is_palindrome = False
            break
        i = i + 1 
        j = j - 1 
    if is_palindrome:
        print("The word is a palindrome.")
    else:
        print("The word is NOT a palindrome.")

is_palindrome()
